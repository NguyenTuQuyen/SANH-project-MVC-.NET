@{
    //ViewBag.Title = "CheckoutCompleted";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Content/SanPhamNoItem.css" rel="stylesheet" />
@{
    ViewBag.Title = "Không có sản phẩm trong giỏ hàng. ";
}
<div class="info-box bg-red">
    <span class="info-box-icon"><i class="fa fa-shopping-cart"></i></span>

    <div class="info-box-content">
        <h2 class="info-box-number">
            THÔNG TIN ĐẶT HÀNG
        </h2>
        <div class="progress">
            <div class="progress-bar"></div>
        </div>
        Không có sản phẩm nào trong giỏ hàng
    </div>
    <!-- /.info-box-content -->
</div>
<div class="box box-danger">
    <div class="box-header with-border">
        <h4 class="box-title">Thông báo</h4>
    </div>
    <div class="box-body">
        <h2>Xin lỗi bạn!</h2>
        Có vẻ như bạn chưa có sản phẩm nào trong giỏ, chọn ngay các sản phẩm yêu thích và thanh toán ngay bạn nhé!
    </div>
    <div class="box-footer">
        @Html.ActionLink("Tiếp tục mua sắm", "Index", null, new { @class = "btn btn-success" })
    </div>
</div>


