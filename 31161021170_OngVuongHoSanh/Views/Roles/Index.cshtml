@model IEnumerable<Microsoft.AspNet.Identity.EntityFramework.IdentityRole>
@{
    ViewBag.Title = "Quyền quản trị";
}
<link href="~/Content/RoleIndex.css" rel="stylesheet" />
<div class="info-box bg-red">
    <span class="info-box-icon"><i class="fa fa-user-shield"></i></span>

    <div class="info-box-content">
        <h2 class="info-box-number">
            QUYỀN QUẢN TRỊ
        </h2>
        <div class="progress">
            <div class="progress-bar"></div>
        </div>
        Quản lý quyền quản trị và phân quyền
    </div>
    <!-- /.info-box-content -->
</div>

<div class="box box-danger">
    <div class="box-header with-border">
        <div class="box-title col-md-12">
            <div class="col-md-2">
                @Html.ActionLink("Tạo mới quyền", "Create", "Roles", new { @class = "btn btn-block btn-success" })
            </div>
            <div class="col-md-2">
                @Html.ActionLink("Phân quyền", "AssignRoles", "Roles", new { @class = "btn btn-block btn-info" })
            </div>
        </div>
    </div>
        <div class="box-body">
            @foreach (var item in Model)
            {
                <div class="col-md-4">
                    <div class="box box-danger box-solid">

                        <div class="box-header with-border">
                            <h3 class="box-title">@Html.DisplayFor(modelItem => item.Name)</h3>
                        </div>
                        <!-- /.box-header -->
                        <!-- form start -->
                        <form class="form-horizontal">
                            <div class="box-body">
                                <div class="form-group">
                                    <div class="col-sm-10">
                                       
                                    </div>
                                </div>
                            </div>                            
                        </form>

                    </div>
                </div>
                }
            </div>
        </div>
