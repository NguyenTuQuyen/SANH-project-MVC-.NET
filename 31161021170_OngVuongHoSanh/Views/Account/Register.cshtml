@model _31161021170_OngVuongHoSanh.Models.RegisterViewModel
@{
    ViewBag.Title = "Đăng ký";
}
<link href="~/Content/AccountRegister.css" rel="stylesheet" />
<div class="callout callout-success">
    <h2>@ViewBag.Title.</h2>
</div>


@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <div class="box box-success">
        <div class="box-header with-border">
            <h4 class="box-title">Đăng ký một tài khoản mới</h4>
        </div>
        <div class="box-body">
            @Html.ValidationSummary("", new { @class = "text-danger" })

            @*ten nguoi dung*@
            <div class="form-group">
                @*@Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })*@
                @Html.LabelFor(m => m.UserName, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", @placeholder = "Ví dụ : Hộ Sanh" })
                </div>
            </div>

            @*Ngaysinh*@
            <div class="form-group">
                @Html.LabelFor(m => m.Ngaysinh, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="fas fa-calendar-alt"></i></span>
                        @Html.EditorFor(m => m.Ngaysinh, new { htmlAttributes = new { @class = "form-control new" } })
                    </div>
                </div>
            </div>
            @*Diachi*@
            <div class="form-group">
                @Html.LabelFor(m => m.Diachi, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.Diachi, new { @class = "form-control", @placeholder = "Địa chỉ phải trên 10 ký tự" })
                </div>
            </div>

            @*Email*@
            <div class="form-group">
                @*@Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })*@
                @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "vidumail@gmail.com" })
                </div>
            </div>

            @*Sodienthoai*@
            <div class="form-group">
                @Html.LabelFor(m => m.PhoneNumber, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control", @placeholder = "Số điện thoại từ 8-12 số" })
                </div>
            </div>

            @*Matkhau*@
            <div class="form-group">
                @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Mật khẩu" })
                </div>
            </div>
            @*Xac nhan mat khau*@
            <div class="form-group">
                @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", @placeholder = "Xác nhận mật khẩu" })
                </div>
            </div>
        </div>
        <div class="box-footer">
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" class="btn btn-success" value="Đăng ký" />
                </div>
            </div>
        </div>
     </div>
}

        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }
