@model _31161021170_OngVuongHoSanh.Models.DanhMuc

@{
    ViewBag.Title = "Tạo mới danh mục";
}

<div class="callout callout-success">
    <h2>@ViewBag.Title.</h2>
</div>

<script src="~/ckeditor/ckeditor.js"></script>

@using (Html.BeginForm())
{
    <div class="form-horizontal">
        @Html.AntiForgeryToken()

        <div class="box box-success">
            <div class="box-header with-border">
                <h4 class="box-title">Tạo mới 1 danh mục ngành hàng</h4>
            </div>
            <div class="box-body">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-group">
                    @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "col-md-2 control-label " })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", @placeholder = "Nhập tên danh muc" } })
                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.MoTa, htmlAttributes: new { @class = "col-md-2 control-label " })
                    <div class="col-md-10">
                        @Html.TextAreaFor(model => model.MoTa, new { @id = "FullDescription", @class = "form-control", @rows = "200" })
                        <script>
                            CKEDITOR.replace("FullDescription");
                        </script>

                        @*@Html.TextAreaFor(x => x.MoTa, new { @class = "form-control", @placeholder = "Mô tả", @id = "Content" })*@
                        @*@Html.TextAreaFor(model => model.MoTa, new { @class = "textarea", rows = "10", style = "width:50%;background-color:#f8f8f8", @id = "ckeContent" })*@
                        @Html.ValidationMessageFor(model => model.MoTa, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="box-footer">
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Tạo mới" class= "btn btn-success" />
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Quay lại danh sách danh mục", "Index")
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
