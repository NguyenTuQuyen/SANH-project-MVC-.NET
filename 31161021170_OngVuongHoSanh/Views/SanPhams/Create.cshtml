@model _31161021170_OngVuongHoSanh.Models.SanPham

@{
    ViewBag.Title = "Thêm mới sản phẩm";
}

<script src="~/ckeditor/ckeditor.js"></script>
<div class="callout callout-success">
    <h2>@ViewBag.Title.</h2>
</div>

@using (Html.BeginForm("Create", "SanPhams", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <div class="box box-success">
        <div class="box-header with-border">
            <h4 class="box-title">Lưu ý: Hình ảnh có thể upload một lần nhiều hình, tối đa 5 hình.</h4>
        </div>
        <div class="box-body">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.Ten, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Ten, new { htmlAttributes = new { @class = "form-control", @placeholder = "Nhập tên sản phẩm" } })
                    @Html.ValidationMessageFor(model => model.Ten, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Gia, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Gia, new { htmlAttributes = new { @class = "form-control", @placeholder = "Nhập giá gốc/giá thị trường sản phẩm" } })
                    @Html.ValidationMessageFor(model => model.Gia, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.GiamGia, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.GiamGia, new { htmlAttributes = new { @class = "form-control", @placeholder = "Nhập số tiền giảm giá" } })
                    @Html.ValidationMessageFor(model => model.GiamGia, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.MoTa, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextAreaFor(model => model.MoTa, new { @id = "Description", @class = "form-control" })
                    <script>
                            CKEDITOR.replace("Description");
                    </script>
                    @*@Html.EditorFor(model => model.MoTa, new { htmlAttributes = new { @class = "form-control", @placeholder = "Nhập mô tả sơ lược sản phẩm" } })*@
                    @Html.ValidationMessageFor(model => model.MoTa, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.MoTaDai, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextAreaFor(model => model.MoTaDai, new { @id = "FullDescription", @class = "form-control" })
                    <script>
                        CKEDITOR.replace("FullDescription");
                    </script>

                    @*@Html.EditorFor(model => model.MoTaDai, new { htmlAttributes = new { @class = "form-control", @placeholder = "Nhập mô tả chi tiết sản phẩm" } })*@
                    @Html.ValidationMessageFor(model => model.MoTaDai, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.GiaoHangNhanh, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <div class="checkbox">
                        @Html.EditorFor(model => model.GiaoHangNhanh)
                        @Html.ValidationMessageFor(model => model.GiaoHangNhanh, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.TraGop, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <div class="checkbox">
                        @Html.EditorFor(model => model.TraGop)
                        @Html.ValidationMessageFor(model => model.TraGop, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.DanhMucID, "DanhMucID", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("DanhMucID", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.DanhMucID, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.PictureUpload, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.PictureUpload, new { type = "file", multiple = true, @class = "" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.MaKhuyenMai, "MaKhuyenMai", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("MaKhuyenMai", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.MaKhuyenMai, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="box-footer">
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" class="btn btn-success" value="Thêm sản phẩm" />
                </div>
            </div>
        </div>
     </div>
        }

        <div>
            @Html.ActionLink("Quay lại danh sách sản phẩm", "Index")
        </div>

        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }

