@model _31161021170_OngVuongHoSanh.Models.DanhMuc

@{
    ViewBag.Title = "Xóa danh mục";
}

<div class="callout callout-danger">
    <h2>@ViewBag.Title.</h2>
</div>

<div class="box box-danger">
    <div class="box-header with-border">
        <h4 class="box-title">Bạn có chắn chắn muốn xóa danh mục ngành hàng này ?</h4>
    </div>
    <div class="box-body">
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Name)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Name)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.MoTa)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.MoTa)
            </dd>

        </dl>
    </div>
    <div class="box-footer">

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <div class="form-actions no-color">
                        <input type="submit" value="Xóa" class="btn btn-danger" />
                    </div>
                </div>
            </div>
        }        
    </div>
</div>

@Html.ActionLink("Quay lại danh sách danh mục", "Index")
